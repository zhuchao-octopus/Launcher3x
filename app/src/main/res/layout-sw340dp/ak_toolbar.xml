<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/com.carit.launcher" >

    <LinearLayout
        android:id="@+id/all_apps_button_cluster"
        android:layout_width="@dimen/ak_toolbar_width"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/ak_toolbar_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/button_gps"
            style="@style/WorkspaceButton"
            android:layout_width="@dimen/ak_toolbar_icon_width"
            android:layout_height="@dimen/ak_toolbar_icon_height"
            android:layout_gravity="center"
            android:background="@drawable/ak_toolbar_navi"
            android:onClick="onLauncherButtonClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/button_eq"
            style="@style/WorkspaceButton"
            android:layout_width="@dimen/ak_toolbar_icon_width"
            android:layout_height="@dimen/ak_toolbar_icon_height"
            android:background="@drawable/ak_toolbar_eq"
            android:onClick="onLauncherButtonClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/button_settings"
            style="@style/WorkspaceButton"
            android:layout_width="@dimen/ak_toolbar_icon_width"
            android:layout_height="@dimen/ak_toolbar_icon_height"
            android:background="@drawable/ak_toolbar_settings"
            android:onClick="onLauncherButtonClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

</merge>