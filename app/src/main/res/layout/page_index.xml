<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/page0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/page5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/page6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/page7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/page8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/page9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:background="@drawable/page_level"
        android:visibility="gone" />

</LinearLayout>